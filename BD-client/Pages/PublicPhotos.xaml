                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Rectangle
                                            Grid.Row="0"
                                            Width="20"
                                            Height="20"
                                            Margin="0 5 5 5"
                                            HorizontalAlignment="Left">
                                            <Rectangle.Fill>
                                                <VisualBrush
                                                    Stretch="Fill"
                                                    Visual="{DynamicResource appbar_heart_outline}" />
                                            </Rectangle.Fill>
                                        </Rectangle>

                                        <Rectangle
                                            Grid.Row="0"
                                            Visibility="{Binding Liked, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Fill="Red"
                                            Width="20"
                                            Height="20"
                                            Margin="0 5 5 5"
                                            HorizontalAlignment="Left">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Visual="{StaticResource appbar_heart}"
                                                             Stretch="Fill" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                        <TextBlock
                                            Grid.Row="1"
                                            VerticalAlignment="Center"
                                            Margin="0 5 5 5"
                                            Text="{Binding LikeIds.Count, StringFormat='Likes {0}'}" />
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="0 0 5 0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center">
                                            <TextBlock.Inlines>
                                                <Run FontWeight="Bold" Text="Author:" />
                                            </TextBlock.Inlines>
                                        </TextBlock>
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center">
                                            <TextBlock>
                                                <Run Text="{Binding User.FirstName}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding User.LastName}"/>
                                            </TextBlock>
                                        </TextBlock>

                                    </Grid>

                                    <TextBlock
                                        Grid.Row="2"
                                        Margin="0 0 5 0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        <TextBlock.Inlines>
                                            <Run FontWeight="Bold" Text="Tags" />
                                        </TextBlock.Inlines>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Row="3"
                                        Text="{Binding Tags,  Converter={StaticResource ArrayStringToStringConverter}}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center" />

                                    <TextBlock
                                        Grid.Row="4"
                                        Margin="0 0 5 0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        <TextBlock.Inlines>
                                            <Run FontWeight="Bold" Text="Description" />
                                        </TextBlock.Inlines>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Row="5"
                                        Text="{Binding Description}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Fresh" Name="Fresh">
                <ListBox
                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    IsSynchronizedWithCurrentItem="True"
                    Name="FreshPhotosListBox"
                    ItemsSource="{Binding Photos}"
                    SelectionMode="Single">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding LikeCmd}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch" Margin=" 0, 20">
                                <Image Source="{Binding Url}" Height="Auto"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Top" Stretch="UniformToFill" Margin="0 5 5 0" />
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Rectangle
                                            Grid.Row="0"
                                            Width="20"
                                            Height="20"
                                            Margin="0 5 5 5"
                                            HorizontalAlignment="Left">
                                            <Rectangle.Fill>
                                                <VisualBrush
                                                    Stretch="Fill"
                                                    Visual="{DynamicResource appbar_heart_outline}" />
                                            </Rectangle.Fill>
                                        </Rectangle>

                                        <Rectangle
                                            Grid.Row="0"
                                            Visibility="{Binding Liked, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Fill="Red"
                                            Width="20"
                                            Height="20"
                                            Margin="0 5 5 5"
                                            HorizontalAlignment="Left">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Visual="{StaticResource appbar_heart}"
                                                             Stretch="Fill" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                        <TextBlock
                                            Grid.Row="1"
                                            VerticalAlignment="Center"
                                            Margin="0 5 5 5"
                                            Text="{Binding LikeIds.Count, StringFormat='Likes {0}'}" />
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="0 0 5 0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center">
                                            <TextBlock.Inlines>
                                                <Run FontWeight="Bold" Text="Author:" />
                                            </TextBlock.Inlines>
                                        </TextBlock>
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center">
                                            <TextBlock>
                                                <Run Text="{Binding User.FirstName}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding User.LastName}"/>
                                            </TextBlock>
                                        </TextBlock>

                                    </Grid>

                                    <TextBlock
                                        Grid.Row="2"
                                        Margin="0 0 5 0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        <TextBlock.Inlines>
                                            <Run FontWeight="Bold" Text="Tags" />
                                        </TextBlock.Inlines>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Row="3"
                                        Text="{Binding Tags,  Converter={StaticResource ArrayStringToStringConverter}}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center" />

                                    <TextBlock
                                        Grid.Row="4"
                                        Margin="0 0 5 0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        <TextBlock.Inlines>
                                            <Run FontWeight="Bold" Text="Description" />
                                        </TextBlock.Inlines>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Row="5"
                                        Text="{Binding Description}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>
        <Button Name="PreviousButton" Content="Previous" HorizontalAlignment="Left" Grid.Row="2"
                VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Margin="5,0,0,0" />
        <Button Name="NextButton" Content="Next" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="2"
                VerticalAlignment="Top" Width="75" Margin="0,0,5,0" />
    </Grid>
</Page>